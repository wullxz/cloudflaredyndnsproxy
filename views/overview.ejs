<% include _head %>
<body class="container">
  <div class="row header">
    <% include _header %>
  </div>

  <div class="row headline">
    <h1><%= title %></h1>
  </div>

  <%- msgs() %>

  <div class="row owndoms">
    <div class="col-sm-10">
      <h3><% if (user.superAdmin) { %>Own <% } %>DynDNS Domains 
        (<%= user.domains.length %>/<%= user.maxDomains %>)</h3>
    </div>
    <div class="col-sm-2">
      <a href="/admin/moddomain" id="addUser" class="btn btn-normal btn-md">Add new...</a>
    </div>
  </div>
  <div class="row domtable">
    <div class="col-sm-12">
      <table class="table table-striped table-hover">
        <thead>
          <th>Domain</th>
          <th>IP</th>
          <th>Actions</th>
        </thead>
        <tbody>
        <% user.domains.forEach(function (dom) { %>
          <tr>
            <td><a href="http://<%= dom.domain %>"><%= dom.domain %></a></td>
            <td class="domainip" data-domain="<%= dom.domain %>">loading...</td>
            <td>BUTTONS</td>
          </tr>
        <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>

  <% if (user.superAdmin) { %>
  <div class="row usersheader">
    <div class="col-sm-10">
      <h3>Users</h3>
    </div>
    <div class="col-sm-2">
      <a href="/admin/moduser" id="addUser" class="btn btn-normal btn-mini btn-inline">Add new...</a>
    </div>
  </div>
  <div class="row userstable">
    <div class="col-sm-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>email</th>
            <th>Domains</th>
            <th>super admin</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (users) { users.forEach(function (u) { %>
          <tr>
            <td><a href="/admin/moduser?id=<%= u._id %>"><%= u.name %></a></td>
            <td><%= u.email %></td>
            <td><%= u.domains.length %>/<%= u.maxDomains %></td>
            <td><%= u.superAdmin %></td>
            <td>BUTTONS</td>
          </tr>
          <% });} %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>
  <div class="row userscontent">

  </div>
  <% } %>

  <script type="text/javascript" src="/admin/public/overview.js"></script>
</body>

