<% include _head %>
<body>
  <div class="row content">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Create admin user</h1>

      <%- msgs() %>

      <form action="/admin/setup" method="post">
        <div class="form-group headline">
          <h2>Admin User information</h2>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
          <label>Password confirm</label>
          <input type="password" class="form-control" name="passwordconfirm">
        </div>
        <div class="form-group headline">
          <h2>Cloudflare API Information</h2>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" name="cfemail">
        </div>
        <div class="form-group">
          <label>Authkey</label>
          <input type="text" class="form-control" name="cfauthkey">
        </div>
        <div class="form-group">
          <label>Zonename</label>
          <input type="text" class="form-control" placeholder="e.g.: schnitzelspecht.de" name="cfzonename">
        </div>

        <button type="submit" class="btn btn-normal btn-lg">Register</button>
      </form>
      <hr>
    </div>
  </div>
</body>
</html>
